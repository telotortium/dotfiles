#!/usr/bin/env bash

# This value of `$1` is the null-ref from githooks(5) - see
# https://stackoverflow.com/a/73000183/207384.
if [[ "$1" = "$(git hash-object -t tree --stdin </dev/null | sed s/./0/g)" ]]; then
    # Copy default .pre-commit-config.yaml
    cp ~/.config/git/template/.pre-commit-config.yaml .
fi

# File generated by pre-commit: https://pre-commit.com
# ID: 138fd403232d2ddd5efb44317e38bf03

# start templated
INSTALL_PYTHON=/opt/local/Library/Frameworks/Python.framework/Versions/3.10/bin/python3.10
ARGS=(hook-impl --config=.pre-commit-config.yaml --hook-type=post-checkout)
# end templated

HERE="$(cd "$(dirname "$0")" && pwd)"
ARGS+=(--hook-dir "$HERE" -- "$@")

filter_out_passed_skipped () {
    grep -E -v '(Passed|Skipped)('$'\E''\[m)?$' >/dev/tty; rv=$?; [ $rv -le 1 ] && return 0; return $rv
}

if [ -x "$INSTALL_PYTHON" ]; then
    "$INSTALL_PYTHON" -mpre_commit "${ARGS[@]}" | filter_out_passed_skipped
elif command -v pre-commit > /dev/null; then
    pre-commit "${ARGS[@]}" | filter_out_passed_skipped
else
    echo '`pre-commit` not found.  Did you forget to activate your virtualenv?' 1>&2
    exit 1
fi
