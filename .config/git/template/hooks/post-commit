#!/usr/bin/env bash

# Check if repo has less than 2 commits (inspired by
# https://stackoverflow.com/a/5492347/207384). If so, copy the
# .pre-commit-config.yaml if not present already.
if [[ "$(git rev-list -n 2 --all | wc -l)" -lt 2 ]]; then
    # Copy default .pre-commit-config.yaml if it's not already present
    if ! [[ -r .pre-commit-config.yaml ]]; then
        cp -n ~/.config/git/template/.pre-commit-config.yaml \
            .pre-commit-config.yaml
        echo "Copied default .pre-commit-config.yaml" 1>&2
    fi
fi

# File generated by pre-commit: https://pre-commit.com
# ID: 138fd403232d2ddd5efb44317e38bf03

# start templated
INSTALL_PYTHON=/opt/local/Library/Frameworks/Python.framework/Versions/3.10/bin/python3.10
ARGS=(hook-impl --config=.pre-commit-config.yaml --hook-type=post-commit)
# end templated

HERE="$(cd "$(dirname "$0")" && pwd)"
ARGS+=(--hook-dir "$HERE" -- "$@")

filter_out_passed_skipped () {
    grep -E -v '(Passed|Skipped)('$'\E''\[m)?$' >/dev/tty; rv=$?; [ $rv -le 1 ] && return 0; return $rv
}

if [ -x "$INSTALL_PYTHON" ]; then
    "$INSTALL_PYTHON" -mpre_commit "${ARGS[@]}" | filter_out_passed_skipped
elif command -v pre-commit > /dev/null; then
    pre-commit "${ARGS[@]}" | filter_out_passed_skipped
else
    echo '`pre-commit` not found.  Did you forget to activate your virtualenv?' 1>&2
    exit 1
fi
