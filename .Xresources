! ----------------------------------------------------------------------
! (U)Rxvt config
! Terminal fonts
Rxvt.font:    xft:dejavu sans mono:size=9
Rxvt.boldFont:    xft:dejavu sans mono:bold:size=9

! terminal colors --------------------------------------------------

! tangoesque scheme (based on Tango Dark from iTerm 2)
Rxvt.background: #000000
Rxvt.foreground: #ffffff
! Black (not tango) + DarkGrey
Rxvt.color0:  #000000
Rxvt.color8:  #555753
! DarkRed + Red
Rxvt.color1:  #be0000
Rxvt.color9:  #ef2929
! DarkGreen + Green
Rxvt.color2:  #4e9a06
Rxvt.color10: #8ae234
! DarkYellow + Yellow
Rxvt.color3:  #c4a000
Rxvt.color11: #fce94f
! DarkBlue + Blue
Rxvt.color4:  #4465a4
Rxvt.color12: #729fcf
! DarkMagenta + Magenta
Rxvt.color5:  #75507b
Rxvt.color13: #ad7fa8
!DarkCyan + Cyan (both not tango)
Rxvt.color6:  #06989a
Rxvt.color14: #a4e2e2
! LightGrey + White
Rxvt.color7:  #d3d7cf
Rxvt.color15: #eeeeec

! perl extensions --------------------------------------------------
!URxvt.perl-lib: <set in .bashrc to get correct $HOME value>
URxvt.perl-ext-common: default,url-select,clipboard

URxvt.keysym.M-u: perl:url-select:select_next
URxvt.url-select.underline: true

URxvt.keysym.M-c: perl:clipboard:copy
URxvt.keysym.M-v: perl:clipboard:paste
URxvt.keysym.M-C-v: perl:clipboard:paste_escaped


